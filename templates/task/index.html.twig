{% extends 'base.html.twig' %}

{% block title %}TaskController!{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h2>Todas las tareas</h2>
    <table>
        <tr>
            <th>Tarea</th>    
            <th>Prioridad</th>
            <th>Horas</th>
            <th>Actions</th>
        </tr>
    

     {% for task in tasks %}
        <tr>
            <td>{{task.title}}</td>
            <td>{{task.priority}}</td>
            <td>{{task.hours}}</td>
            <td class="buttons">
                <a href="{{ path('task_detail',{'id':task.id}) }}" class="btn-show">show</a>
                <a href="" class="btn-edit">Edit</a>
                <a href="" class="btn-delete">Delete</a>
            </td>
        </tr>
        
        {% endfor %}
    </table>

   
</div>
{% endblock %}
