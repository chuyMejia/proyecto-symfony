<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}

            <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

            
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div id="header">
            {# <h2>Tasks</h2> #}
            <ul id="menu">   
                  {% if app.user %}
                    <li><a href="{{ path('tasks') }}">Inicio</a></li>
                    <li><a href="{{ path('my_task') }}">my Tasks</a></li>   
                    <li><a href="{{ path('task_creation') }}">Create task</a></li>   
                    <li class="rigth"><a href="{{ path('logout') }}">Cerrar sesion</a></li>
                    <li class="rigth"><a href="">{{ app.user.name ~ ' ' ~ app.user.surname }}</a></li>              
                  {% else %}
                <li ><a href="{{ path('login') }}">Login</a></li>
                <li ><a href="{{ path('registro') }}">Registro</a></li>    
             {% endif %}        
            </ul>
        </div>
        <div class="clearfix">
        
        </div>
          {% if app.user %}
        
          {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>



<script src="{{ asset('assets/js/main.js') }}" ></script>
